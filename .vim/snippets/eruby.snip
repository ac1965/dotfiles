snippet case
	<% case ${1:object} %>
	<% when ${2:condition} %>
		${3}
	<% end %>
snippet when
	<% when ${1:condition} %>
		${2}
snippet if
	<% if ${1:condition} %>
		${2}
	<% end %>
snippet ife
	<% if ${1:condition} %>
		${2}
	<% else %>
		${3}
	<% end %>
snippet unless
	<% unless ${1:condition} %>
		${2}
	<% end %>
